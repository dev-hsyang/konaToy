{{>layout/header}}
<br><br>

<div class="col-md-12">
    <div class="col-md-4">
        <h1><strong>게시글</strong></h1>
        <br>
        <form>
            <div class="form-group">
                <label for="id">글 제목: </label>
                <input type="text" class="form-control" id="id" value="{{post.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="id">작성자: </label>
                <input type="text" class="form-control" id="id" value="{{post.user.nickname}}" readonly>
            </div>
            <div class="form-group">
                <label for="time1">작성 시간: </label>
                <input type="text" class="form-control" id="id" value="{{post.createdate}}" readonly>
            </div>
            <div class="form-group">
                <label for="time2">수정 시간: </label>
                <input type="text" class="form-control" id="id" value="{{post.modifieddate}}" readonly>
            </div>
            <div class="form-group">
                <label for="time2">조회수: </label>
                <input type="text" class="form-control" id="id" value="{{post.hits}}" readonly>
            </div>
            <div class="form-group">
                <label for="club">소속: </label>
                <input type="text" class="form-control" id="id" value="{{post.club}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">본문: </label>
                <textarea class="form-control" id="content" readonly>{{post.content}}</textarea>
            </div>
            <a href="javascript:window.history.back();" role="button" class="btn btn-secondary">뒤로</a>
        </form>
    </div>
</div>

<!--<a href="/posts/update/{{post.postID}}" role="button" class="btn btn-primary">수정</a>-->
{{>layout/footer}}
</body>
</html>