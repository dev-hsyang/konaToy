{{>layout/header}}
{{>layout/mypage-sidebar}}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 m-lg-3"><strong>안녕하세요, {{nickname}}</strong></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>
    <table class="table table-horizontal table-bordered">
        <h3><strong>내가 쓴 댓글</strong></h3>
        <br>
        <div class="card" id="comment-list">
            <div class="card-header bi bi-chat-dots">
                {{userComments.size}} Comments
            </div>
            <ul class="list-group-flush">
                {{#userComments}}
                    <li class="list-group-item">
                        <span>
                            <span style="font-size: xx-small">{{createdate}}</span>
                            <button class="badge bi bi-pencil-square">수정</button>
                            <button class="badge bi bi-trash">삭제</button>
                        </span>
                        <div>{{content}}</div>
                    </li>
                {{/userComments}}
            </ul>
        </div>
    </table>
</main>
</div>
</div>
</div>

{{>layout/footer}}
</body>
</html>